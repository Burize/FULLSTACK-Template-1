.skills .skills-body
    
    .skills-body-row
        
        &__text    
            text-align center
            font-family "Myriad Pro", Arial, sans-serif
            font-style normal
            font-weight 500
            text-transform uppercase
            margin-bottom 0.25em
        
        
        &__points
            width 80%
            margin auto
            display flex
            justify-content space-around
               
            .skills-body-row__point
                width 5%
                border-radius 100%
                background-color color_gray
                    
                &-inner
                    padding-top 100%
                   
       
            .skills-body-row__point_active
                background-color color_blue