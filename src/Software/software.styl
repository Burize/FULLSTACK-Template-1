@import  "../CSS-components/title.styl"
@import "../Icons/icon.styl"

color_blue = #3d6cb0;
color_gray = #e6e6e6;

.software{
    
    .software-skills{
        
        display flex;
        justify-content space-between;
        flex-wrap wrap;
        margin 0;
        padding 0;
        padding-left 1%;
        padding-top 0.9em;
       
        .software-skill{
            
            width 44.5%;
            margin-bottom 1.25em;
            
            .software-skill__text{
            
            font-family MPRegular;
            text-transform uppercase;
            font-size 1.75em;
            margin 0;
            margin-bottom 0.5em;
            } 
            
            .load-bar{
                
                background-color: color_gray;
                height 1.55em;
                
                
                .load-bar__progress{
                    background-color color_blue;
                    height 100%;
                    
                }
            }
        }
     
    }
}