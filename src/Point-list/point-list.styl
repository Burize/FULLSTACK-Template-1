.point-list
     
    .title
        margin-bottom 0.7em
    
    
    &-row
        
        &::before
            display block
            content ""
            width 1.3em
            height 1.3em
            border-radius 100%
            background-color black
            position absolute
            top 0.6em
            left 0.8em
        
        position relative
        padding-left 3.4em
        margin-bottom 0.7em
        font-family: "Myriad Pro", Arial, sans-serif
        font-style normal
        font-weight 500
        
        &__title
            
            span
                font-weight 700
                text-transform uppercase
                margin-right 0.25em
                color color_blue

            font-size 1.7em
            margin 0
            margin-bottom 0.06em
            
        &__under-title
            text-transform uppercase
            font-size 1.7em
            margin 0

        &__text 
            margin 0
            margin-top 0.3em