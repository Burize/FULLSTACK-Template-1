@import  "./title.styl"
@import "../Icons/icon.styl"

color_blue = #3d6cb0;


.point-list{
     
    .point-list-row{
        
        &::before{
            display block;
            content "";
            width 1.3em;
            height 1.3em;
            border-radius 100%;
            background-color black;
            position absolute;
            top 1.3em;
            left 0.9em;
        }
        
         position relative;
         padding-left 3.5em;
         padding-top 0.55em;
        .point-list-row__title{
            
              span{
                
                 font-family MPBold;
                 text-transform uppercase;
                 margin-right 0.25em;
                 color color_blue;
            }
            
            font-family MPRegular;
            font-size 1.8em;
            margin 0;
            
        }
        
        .point-list-row__under-title{
            
              font-family MPRegular;
            text-transform uppercase;
            font-size 1.75em;
            margin 0;
            margin-top 0.1em;
        }
        
        .point-list-row__text{
            
            font-family MPRegular;
            font-size 1.05em; 
            margin 0;
            margin-top 0.5em;
        }
    }
    
}